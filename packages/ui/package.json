{
  "name": "@csmm/ui",
  "version": "0.0.1",
  "private": false,
  "description": "CSMM Lib is a simple and customizable component library to build React apps faster within the csmm eco system",
  "author": "CSMM Team",
  "scripts": {
    "build": "npm run build:tsc && npm run build:storybook",
    "build:tsc": "tsc --project ./tsconfig.production.json && npm run copypackage",
    "copypackage": "cp -rf package.json build",
    "start": "start-storybook -p 6006 --no-manager-cache",
    "build:storybook": "build-storybook",
    "sort-package": "sort-package-json"
  },
  "dependencies": {
    "react-popper": "^2.2.5",
    "react-scripts": "4.0.3"
  },
  "devDependencies": {
    "@storybook/addon-a11y": "^6.2.9",
    "@storybook/addon-actions": "^6.2.9",
    "@storybook/addon-essentials": "^6.2.9",
    "@storybook/addon-links": "^6.2.9",
    "@storybook/preset-create-react-app": "^3.1.7",
    "@storybook/react": "^6.2.9",
    "sort-package-json": "^1.49.0"
  }
}